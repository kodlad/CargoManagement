<Application x:Class="CargoManagement.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:CargoManagement.Converters"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <!-- Собираем один словарь, куда вмёржены цвета, стили и конвертер -->
        <ResourceDictionary>

            <!-- 1) Подключаем внешние словари -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- 2) Регистрируем наш конвертер -->
            <conv:StatusToBrushConverter x:Key="StatusToBrushConverter"/>

        </ResourceDictionary>
    </Application.Resources>
</Application>
