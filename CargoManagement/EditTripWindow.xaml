<Window x:Class="CargoManagement.EditTripWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Редактировать поездку"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Пункт отправления -->
        <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">Пункт отправления:</TextBlock>
        <TextBox Grid.Row="0" Grid.Column="1" x:Name="OriginTextBox" Margin="4"/>

        <!-- Пункт назначения -->
        <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">Пункт назначения:</TextBlock>
        <TextBox Grid.Row="1" Grid.Column="1" x:Name="DestinationTextBox" Margin="4"/>

        <!-- Дата поездки -->
        <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center">Дата:</TextBlock>
        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="DatePicker" Margin="4"/>

        <!-- Водитель -->
        <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center">Водитель:</TextBlock>
        <ComboBox Grid.Row="4" Grid.Column="1"
          x:Name="DriverCombo"
          DisplayMemberPath="Name"
          SelectedValuePath="Id"
          Margin="4"/>

        <!-- Техника -->
        <TextBlock Grid.Row="5" Grid.Column="0" VerticalAlignment="Center">Техника:</TextBlock>
        <ComboBox Grid.Row="5" Grid.Column="1"
          x:Name="VehicleCombo"
          DisplayMemberPath="PlateNumber"
          SelectedValuePath="Id"
          Margin="4"/>

        <!-- Статус -->
        <TextBlock Grid.Row="3" Grid.Column="0" VerticalAlignment="Center">Статус:</TextBlock>
        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="StatusComboBox" Margin="4" SelectedIndex="0">
            <ComboBoxItem Tag="Planned" Content="Запланировано" />
            <ComboBoxItem Tag="On Route" Content="В пути" />
            <ComboBoxItem Tag="Completed" Content="Завершено" />
        </ComboBox>

        <!-- Кнопки Сохранить/Отмена -->
        <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Width="75" Margin="0,0,8,0" Click="Save_Click">Сохранить</Button>
            <Button Width="75" Click="Cancel_Click">Отмена</Button>
        </StackPanel>
    </Grid>
</Window>
